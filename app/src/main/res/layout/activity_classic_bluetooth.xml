<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_classic_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="蓝牙开发"
            app:titleTextColor="@color/md_white"/>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/tv_bluetooth_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="本地蓝牙信息"
        android:padding="10dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/et_bluetooth_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="输入要发送的消息"/>

        <Button
            android:id="@+id/btn_bluetooth_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送消息"/>

    </LinearLayout>

</LinearLayout>